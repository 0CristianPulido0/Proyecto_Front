<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UN COMENTARIO</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" value={{persona.name}}
                        placeholder="Ejemplo: Luis Angel" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="coment" class="input-group-text">Comentario</label>
                        <input class="form-control" type="text" name="coment" id="coment" value={{persona.coment}} placeholder="Deja tu comentario" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text">Celular</label>
                        <input class="form-control" type="number" name="age" id="age" value={{persona.age}} placeholder="Ejemplo: 123456789" required>
                    </div>

                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>