<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">TODOS LOS COMENTARIOS</h3>
        {{#if personas}}
                <table class="table text-center">
                    <thead>
                        <tr class="table" style="background-color:#ea5d0b">
                            <th scope="col">Nombre</th>
                            <th scope="col">Comentario</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each personas}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{coment}}</td>
                                <td>{{age}}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/edit/{{id}}" class="btn btn-warning p-2" title="Editar">
                                        <i class="fa-solid fa-pencil"></i></a>
                                        <a href="/delete/{{id}}" class="btn btn-danger p-2" title="Eliminar">
                                        <i class="fa-regular fa-trash-can"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr class="table" style= "background-color:#ea5d0b">
                            <td colspan="4">COMENTARIOS</td>
                        </tr>
                    </tfoot>
                </table>
            {{else}}
                <div class="card text-center mx-auto" style="width: 350px;">
                    <div class="card-header">
                        <h3>Deja el primer comentario </h3>
                    </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas crear el primer comentario</p>
                    <a href="#" class="btn btn-primary">Dejar comentario</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>